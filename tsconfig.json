{
  "compilerOptions": {
    "module": "esnext",
    "target": "es6",
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
  },
  "include": ["src"],
  "exclude": ["node_modules"],
}
